<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5">
  <thead>
     <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.category}} </td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>