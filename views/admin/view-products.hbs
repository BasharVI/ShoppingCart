<script>
  $(document).ready( function () {
    $('#productsview').DataTable();
} );
</script>

<section>
    <div class="container">
        <div class="row mt-3 p-5">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5" id="productsview">
  <thead>
     <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th scope="col">Option</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.category}} </td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;height:70px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure?')">Delete</a>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
