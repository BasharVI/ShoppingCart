<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Items</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{#each this.product}}
                    <td><img style="width: 50px;height:70px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>{{this.Name}}</td>
                    <td>Rs.{{this.price}}</td>
                    {{/each}}
                    <td>
                        <button class="cart-items-count mr-3">-</button>{{this.quantitty}}<button class="cart-items-count ml-3">+</button>
                    </td>
                    <td>
                        <a href="/delete-cartproduct/{{this._id}}"class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</section>