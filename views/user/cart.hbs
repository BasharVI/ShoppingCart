<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Items</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    
                    <td><img style="width: 50px;height:70px" src="/product-images/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    <td>Rs.{{this.product.price}}</td>
                   
                    <td>
                        
                        <button class="cart-items-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','-1')">-</button>
                        
                        <span id="{{this.product._id}}">{{this.quantitty}}</span>

                        <button class="cart-items-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','1')">+</button>
                    </td>
                    
                    <td>
                        <a href="/delete-cartproduct/{{this.product._id}}"class="btn btn-danger">Remove</a>
                    </td>
                   
                </tr>
                {{/each}}
            </tbody>

        </table>
        <hr>
       <div class="float-right pr-5">

        <h4 class="float-left  mr-5 ">Total Price: Rs.50000</h4>
        
        <br>
        <a href="/place-order" class="btn btn-success mt-3 " style="width: 100%;">Place Order</a>

        </div>
    </div>
</section>

<script>
    function changeQuantity(cartId,proId,count){
        
        let quantity= parseInt(document.getElementById(proId).innerHTML)
        count=parseInt(count)
        $.ajax(
            {   
                url:'/change-product-quantity',
                data:{
                    cart:cartId,
                    product:proId,
                    count:count,
                    quantity:quantity  
                },
                method:'post',
                success:(response)=>{
                    document.getElementById(proId).innerHTML=quantity+count
                }

            }
        )
        
    }
</script>