
    <section>
        <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem;">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="width: 14 rem; height:24rem ;">
                    <div class="card-body" style="width:15 rem ;height: 15 rem;">
                    <h5 class="card-title">{{this.Name}}</h5>
                    <p class="card-text">{{this.Description}}</p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>

            {{/each}}
            </div>
        </div>
        </div>
    </section>